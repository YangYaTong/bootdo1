	<insert id="save" parameterType="com.bootdo.pooredu.domain.PooreduDO" useGeneratedKeys="true" keyProperty="id">
		insert into pooredu
		(
			`idNumber`, 
			`poorname`, 
			`gender`, 
			`age`, 
			`profession`, 
			`edu`, 
			`phone`, 
			`address`, 
			`trainFlag`, 
			`trainNum`, 
			`trainContent`, 
			`augmentMoney`, 
			`sellMoney`, 
			`employedFlag`, 
			`shop`
		)
		values
		(
			#{idnumber}, 
			#{poorname}, 
			#{gender}, 
			#{age}, 
			#{profession}, 
			#{edu}, 
			#{phone}, 
			#{address}, 
			#{trainflag}, 
			#{trainnum}, 
			#{traincontent}, 
			#{augmentmoney}, 
			#{sellmoney}, 
			#{employedflag}, 
			#{shop}
		)
	</insert>
	 
	<update id="update" parameterType="com.bootdo.pooredu.domain.PooreduDO">
		update pooredu 
		<set>
			<if test="idnumber != null">`idNumber` = #{idnumber}, </if>
			<if test="poorname != null">`poorname` = #{poorname}, </if>
			<if test="gender != null">`gender` = #{gender}, </if>
			<if test="age != null">`age` = #{age}, </if>
			<if test="profession != null">`profession` = #{profession}, </if>
			<if test="edu != null">`edu` = #{edu}, </if>
			<if test="phone != null">`phone` = #{phone}, </if>
			<if test="address != null">`address` = #{address}, </if>
			<if test="trainflag != null">`trainFlag` = #{trainflag}, </if>
			<if test="trainnum != null">`trainNum` = #{trainnum}, </if>
			<if test="traincontent != null">`trainContent` = #{traincontent}, </if>
			<if test="augmentmoney != null">`augmentMoney` = #{augmentmoney}, </if>
			<if test="sellmoney != null">`sellMoney` = #{sellmoney}, </if>
			<if test="employedflag != null">`employedFlag` = #{employedflag}, </if>
			<if test="shop != null">`shop` = #{shop}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="remove">
		delete from pooredu where id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from pooredu where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

